<div class="app-container">
    {{> nav}}
    {{> sidebar}}
    
    <main class="main-content">
        <div class="channel-header">
            <div class="channel-profile">
                <div class="channel-info">
                    <div class="channel-avatar">
                        <span>{{channel.initial}}</span>
                    </div>
                    <div class="channel-details">
                        <h1 class="channel-name">{{channel.name}}</h1>
                        <div class="channel-stats">
                            <span>{{channel.subscriberCount}} subscribers</span>
                            <span>â€¢</span>
                            <span>{{channel.videoCount}} videos</span>
                        </div>
                        <p class="channel-description">{{channel.description}}</p>
                    </div>
                </div>
                <button class="subscribe-button {{#if channel.isSubscribed}}subscribed{{/if}}">
                    {{#if channel.isSubscribed}}Subscribed{{else}}Subscribe{{/if}}
                </button>
            </div>
        </div>

        <!-- channel navvy -->
        <div class="channel-nav">
            <a href="#videos" class="nav-link active">Videos</a>
            <a href="#playlists" class="nav-link">Playlists</a>
            <a href="#about" class="nav-link">About</a>
        </div>

        <!-- user videos section -->
        <div class="video-grid">
            {{#each channel.videos}}
            <article class="video-card">
                <div class="thumbnail-container">
                    <img src="{{thumbnailUrl}}" alt="{{title}}" class="video-thumbnail">
                    <span class="video-duration">{{duration}}</span>
                </div>
                <div class="video-info">
                    <h3 class="video-title">{{title}}</h3>
                    <div class="video-meta">
                        <span>{{views}} views</span>
                        <span>{{publishedAt}}</span>
                    </div>
                </div>
            </article>
            {{/each}}
        </div>
    </main>
</div>