{{!-- settings.handlebars --}}
<div class="app-container">
    {{> nav}}
    {{> sidebar}}
<!-- will come back to this to fix formatting issues (potentially)-->
    <main class="main-content">
        <div class="content-container">
            <h1 class="settings-title">Settings</h1>

            <div class="settings-wrapper">
                <form id="settings-form" method="POST" action="/settings">
                    <!-- Account Settings -->
                    <div class="settings-section">
                        <h2>Account Settings</h2>
                        <div class="form-group">
                            <input type="email" id="email" name="email" value="{{user.email}}" class="settings-input"
                                   placeholder="Email" required/>
                        </div>
                        <div class="form-group">
                            <input type="password" id="current-password" name="currentPassword" class="settings-input"
                                   placeholder="Current Password"/>
                        </div>
                        <div class="form-group">
                            <input type="password" id="new-password" name="newPassword" class="settings-input"
                                   placeholder="New Password"/>
                        </div>
                        <div class="form-group">
                            <input type="password" id="confirm-password" name="confirmPassword" class="settings-input"
                                   placeholder="Confirm New Password"/>
                        </div>
                    </div>

                    <!-- Profile Settings -->
                    <div class="settings-section">
                        <h2>Profile Settings</h2>
                        <div class="form-group">
                            <input type="text" id="display-name" name="displayName" value="{{user.displayName}}"
                                   class="settings-input" placeholder="Display Name" required/>
                        </div>
                        <div class="form-group">
                            <textarea id="bio" name="bio" class="settings-input" placeholder="Bio"
                                      rows="4">{{user.bio}}</textarea>
                        </div>
                    </div>

                    <!-- Privacy Settings -->
                    <div class="settings-section">
                        <h2>Privacy Settings</h2>
                        <div class="form-group">
                            <label class="settings-checkbox">
                                <input type="checkbox" name="showSubscriptions"
                                       {{#if user.showSubscriptions}}checked{{/if}} />
                                <span>Show my subscriptions to other users</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <label class="settings-checkbox">
                                <input type="checkbox" name="showLikedVideos"
                                       {{#if user.showLikedVideos}}checked{{/if}} />
                                <span>Show my liked videos to other users</span>
                            </label>
                        </div>
                    </div>

                    <!-- Notifications -->
                    <div class="settings-section">
                        <h2>Notification Settings</h2>
                        <div class="form-group">
                            <label class="settings-checkbox">
                                <input type="checkbox" name="emailNotifications"
                                       {{#if user.emailNotifications}}checked{{/if}} />
                                <span>Email notifications</span>
                            </label>
                        </div>
                    </div>

                    <div class="settings-actions">
                        <button type="submit" class="save-button">Save Changes</button>
                        <button type="reset" class="cancel-button">Cancel</button>
                    </div>
                <div class="hidden" id="error-div">
                    <div class="alert alert-danger text-goes-here">
                        <p>{{errorMessage}}</p>
                    </div>
                </div>

                </form>
            </div>
        </div>
    </main>
</div>