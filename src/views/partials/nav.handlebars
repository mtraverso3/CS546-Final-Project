<!-- Header -->
    <header class="main-header">
        <div class="header-left">
            <button class="menu-toggle" aria-label="Toggle Menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <a href="/" class="logo">
                <div class="logo-placeholder"></div>
                YourTube
            </a>
        </div>

        <div class="search-container">
            <form class="search-form"  method="POST" action="/search">
                <input type="search" name="search" id="search" placeholder="Search videos..." class="search-input">
                <button type="submit" class="search-button">
                    <span class="visually-hidden">Search</span>
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zm0 0l7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                </button>
            </form>
        </div>

        <div class="header-actions">
            <button class="action-button upload-btn" aria-label="Upload Video">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M12 4v16m8-8H4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
            </button>
            <button class="action-button notifications-btn" aria-label="Notifications">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M12 3v2M19 17v2H5v-2l2-4V9a5 5 0 0 1 10 0v4l2 4z" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
            </button>
            <button class="profile-button" aria-label="User Profile">
                <div class="profile-avatar">JD</div>
            </button>
        </div>
    </header>